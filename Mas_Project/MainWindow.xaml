<Window x:Class="Mas_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mas_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Quest Board Viewer" FontSize="20" Margin="0,0,0,10"/>
        
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Filter Rank:" Margin="0,0,10,0"/>
                <TextBox Width="50" Text="{Binding FilterRank, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0"/>
                <Button Content="Filter" Command="{Binding FilterCommand}" />
            </StackPanel>

            <ListBox ItemsSource="{Binding Quests}" DisplayMemberPath="Title" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>

</Window>
