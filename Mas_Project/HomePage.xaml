<Page x:Class="Mas_Project.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Mas_Project"
      mc:Ignorable="d"
      Title="HomePage">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#151A1E">
        <StackPanel Margin="20">

            <!-- Header -->
            <DockPanel LastChildFill="False" Margin="0,0,0,20">
                <TextBlock Text="QuestRealm"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           DockPanel.Dock="Left" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Home" Foreground="White" Margin="10,0"/>
                    <TextBlock Text="Quests" Foreground="White" Margin="10,0"/>
                    <TextBlock Text="Characters" Foreground="White" Margin="10,0"/>
                    <TextBlock Text="Inventory" Foreground="White" Margin="10,0"/>
                    <TextBlock Text="Settings" Foreground="White" Margin="10,0"/>
                </StackPanel>
            </DockPanel>

            <!-- Banner -->
            <Border Height="240" CornerRadius="12" Margin="0,0,0,20">
                <Border.Background>
                    <ImageBrush ImageSource="Images/UnnamedValley.png" />
                </Border.Background>
            </Border>

            <!-- Title and description -->
            <StackPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                <TextBlock Text="Choose Your Quest Board"
                           Foreground="White"
                           FontSize="28"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="0,10" />
                <TextBlock Text="Select a quest board to view available quests. Each board offers different types of challenges and rewards."
                           Foreground="White"
                           FontSize="14"
                           TextAlignment="Center"
                           Width="600"
                           TextWrapping="Wrap" />
            </StackPanel>

            <!-- Quest Boards -->
            <UniformGrid Columns="2" Rows="2" HorizontalAlignment="Center" VerticalAlignment="Top">
                <!-- Eldoria Forest -->
                <StackPanel Margin="10" MouseLeftButtonUp="Eldoria_Click" Cursor="Hand">
                    <Border Height="120" CornerRadius="12">
                        <Border.Background>
                            <ImageBrush ImageSource="Images/EldoriaForest.png"/>
                        </Border.Background>
                    </Border>
                    <TextBlock Text="Eldoria Forest" Foreground="White" FontWeight="Bold" />
                    <TextBlock Text="Quests within the ancient, enchanted forest of Eldoria."
                               Foreground="LightGray" FontSize="12" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Ironpeak Mountains -->
                <StackPanel Margin="10">
                    <Border Height="120" CornerRadius="12">
                        <Border.Background>
                            <ImageBrush ImageSource="Images/IronpeakMountains.png"/>
                        </Border.Background>
                    </Border>
                    <TextBlock Text="Ironpeak Mountains" Foreground="White" FontWeight="Bold" />
                    <TextBlock Text="Dangerous mountain quests await among the peaks."
                               Foreground="LightGray" FontSize="12" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Silverstream City -->
                <StackPanel Margin="10">
                    <Border Height="120" CornerRadius="12">
                        <Border.Background>
                            <ImageBrush ImageSource="Images/SilverstreamCity.png"/>
                        </Border.Background>
                    </Border>
                    <TextBlock Text="Silverstream City" Foreground="White" FontWeight="Bold" />
                    <TextBlock Text="Urban challenges and diplomacy missions."
                               Foreground="LightGray" FontSize="12" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Whispering Caves -->
                <StackPanel Margin="10">
                    <Border Height="120" CornerRadius="12">
                        <Border.Background>
                            <ImageBrush ImageSource="Images/WhisperingCaves.png"/>
                        </Border.Background>
                    </Border>
                    <TextBlock Text="Whispering Caves" Foreground="White" FontWeight="Bold" />
                    <TextBlock Text="Mysterious quests in dark, echoing caverns."
                               Foreground="LightGray" FontSize="12" TextWrapping="Wrap"/>
                </StackPanel>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</Page>
